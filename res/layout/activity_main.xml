<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#949494"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/theme_comic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/society"
            android:textSize="@dimen/mainactivity_topic_fontsize"/>

        <TextView
            android:id="@+id/theme_science"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/science"
            android:textSize="@dimen/mainactivity_topic_fontsize" />

        <TextView
            android:id="@+id/theme_enviro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/environment"
            android:textSize="@dimen/mainactivity_topic_fontsize" />

        <TextView
            android:id="@+id/theme_women"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/women"
            android:textSize="@dimen/mainactivity_topic_fontsize" />
    </LinearLayout>

     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tab_under_img"
                android:contentDescription="@string/choose_topic_bar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:scaleType="matrix"
                android:src="@drawable/tab_under_img" />

            <ImageView
                android:contentDescription="@string/choose_topic_bar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/theme_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="@color/font_color"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>