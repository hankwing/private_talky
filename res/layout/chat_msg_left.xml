    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chat_msg_left_name"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/default_avatar"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chat_msg_left_name"
            android:background="@drawable/chatfrom_bg_normal" >

            <ImageView 
                android:id="@+id/chat_msg_left_image"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:background="@drawable/icon_temp_image"
                style="@style/chat_image_style"/>
            <TextView
                android:id="@+id/chat_msg_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="19sp"
                android:focusable="false"
                android:gravity="left|center"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>